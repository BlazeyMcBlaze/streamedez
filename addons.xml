<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
  <addon id="plugin.video.streamedez" name="StreamedEZ" version="0.1.11" provider-name="BlazeyMcBlazeFace">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.requests" version="2.12.0"/>
	  <import addon="script.module.certifi" version="2023.5.7"/>
      <import addon="inputstream.adaptive" version="2.4.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>Sports Streaming Service</summary>
      <description>Watch live sports. Not Currently Working on Flatpak Installs</description>
      <platform>all</platform>
      <language>en</language>
      <assets>
        <icon>icon.png</icon>
      </assets>
    </extension>
  </addon>
 <addon id="service.christmascountdown" name="Christmas Countdown" version="1.0.5" provider-name="BlazeyMcBlazeFace">
   <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.service" library="resources/lib/service.py" start="startup">
    <provides>service</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Simple Christmas countdown overlay</summary>
    <description>Starts a small overlay showing days/hours/minutes/seconds until Dec 25.</description>
    <platform>all</platform>
  </extension>
  <language>en</language>
</addon>
 </addons>




